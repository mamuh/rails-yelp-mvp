<h1>
 <%= @restaurant.name %>
</h1>
<p>
 <%= @restaurant.category %>
</p>
<p>
 <%= @restaurant.address %>
</p>

<p>
 <%= @restaurant.phone_number %>
</p>

<h2>Reviews:</h2>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>
      <%= review.content %>
      <%= review.rating %>
    </li>
  <% end %>
</ul>

<%= render 'reviews/new', restaurant: @restaurant %>


<%= link_to "Back to home", root_path %> |
<%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>
